# Application Settings
APP_NAME="Financial Document Analyzer API"
APP_VERSION="1.0.0"
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
