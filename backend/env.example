# Application Settings
APP_NAME="Financial Document Analyzer API"
APP_VERSION="1.0.0"
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MongoDB Database Settings
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB=financial_docs

# Alternative: Use full MongoDB URL instead of individual components
# For local MongoDB (no auth):
# MONGODB_URL=mongodb://localhost:27017/financial_docs
# For MongoDB with authentication:
# MONGODB_URL=mongodb://username:password@localhost:27017/financial_docs
# For MongoDB Atlas:
# MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/financial_docs?retryWrites=true&w=majority


# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
